{
	"name": "sveltekit-static",
	"version": "0.0.1",
	"description": "SvelteKit app with static adapter and Tailwind",
	"type": "module",
	"scripts": {
		"dev:only": "svelte-kit dev",
		"dev": "bash ./scripts/dev.sh",
		"build:only": "svelte-kit build",
		"build": "bash ./scripts/build.sh",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint:css": "npx stylelint \"./src/lib/css/**/*.pcss\"",
		"lint:fix": "npx stylelint \"./src/lib/css/**/*.pcss\" --fix",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"css": "NODE_ENV=development postcss ./src/lib/css/styles.pcss -o ./src/lib/css/dist.css",
		"css:watch": "cross-env TAILWIND_MODE=watch cross-env NODE_ENV=development postcss ./src/lib/css/styles.pcss -o ./src/lib/css/dist.css -w",
		"css:build": "cross-env TAILWIND_MODE=build cross-env NODE_ENV=production postcss ./src/lib/css/styles.pcss -o ./src/lib/css/dist.css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bamadesigner/sveltekit-static.git"
	},
	"bugs": {
		"url": "https://github.com/bamadesigner/sveltekit-static/issues"
	},
	"homepage": "https://github.com/bamadesigner/sveltekit-static#readme",
	"engines": {
		"node": "16.12.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^1.0.0-next.21",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.2.0",
		"@typescript-eslint/parser": "^5.2.0",
		"autoprefixer": "^10.3.7",
		"concurrently": "^6.3.0",
		"cross-env": "^7.0.3",
		"cssnano": "^5.0.8",
		"eslint": "^8.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"postcss": "^8.3.11",
		"postcss-cli": "^9.0.1",
		"postcss-import": "^14.0.2",
		"postcss-nested": "^5.0.6",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"stylelint": "^14.0.1",
		"stylelint-config-recommended": "^6.0.0",
		"stylelint-config-standard": "^23.0.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.7",
		"svelte-preprocess": "^4.9.8",
		"tailwindcss": "^2.2.17",
		"tslib": "^2.3.1",
		"typescript": "^4.4.4"
	}
}